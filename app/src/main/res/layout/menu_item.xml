<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_marginTop="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_item_card_background"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp">

            <ImageView
                android:id="@+id/menu_item_iv_preview"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/menu_preview"
                android:src="@drawable/bg_image_preview" />

            <TextView
                android:id="@+id/menu_item_tv_menu_title"
                style="@style/TextStyle.MenuTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/menu_item_iv_preview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/dummy_text_menu_title" />

            <TextView
                android:id="@+id/menu_item_tv_menu_description"
                style="@style/TextStyle.MenuDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_item_tv_menu_title"
                android:layout_alignBottom="@id/menu_item_iv_preview"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/menu_item_iv_preview"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/dummy_text_menu_description" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>