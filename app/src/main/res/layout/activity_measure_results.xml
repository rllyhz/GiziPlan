<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.measure_results.MeasureResultsActivity">

    <include
        android:id="@+id/custom_app_bar_layout"
        layout="@layout/appbar_layout" />

    <TextView
        android:id="@+id/measure_results_tv_heading"
        style="@style/TextStyle.Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="16dp"
        android:text="@string/text_measure_results"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_app_bar_layout"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/measure_results_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measure_results_tv_heading" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/measure_results_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measure_results_tv_heading"
        tools:itemCount="10"
        tools:listitem="@layout/item_measure_result"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/measure_results_tv_empty_message"
        style="@style/TextStyle.MenuDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_measure_results_message"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measure_results_tv_heading" />

    <View
        android:id="@+id/measure_results_fading_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_overlay_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measure_results_tv_heading"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>