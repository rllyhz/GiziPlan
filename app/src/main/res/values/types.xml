<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextStyle.Loading">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <style name="TextStyle.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <style name="TextStyle.Error.OnDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <style name="TextStyle.DropdownItem">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextStyle.Heading">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/brand_color</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextStyle.MenuTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextStyle.MenuDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <style name="TextStyle.StatusLabel">
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextStyle.StatusValue">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextStyle.NutritionInfoLabel">
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextStyle.NutritionInfoValue">
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextStyle.MenuDescriptionLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/brand_color</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextStyle.MenuDescriptionRowText">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
</resources>